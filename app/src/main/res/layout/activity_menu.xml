<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.austin.layouts.MenuActivity">

    <Button
        android:id="@+id/butPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:text="Play" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/butPlay"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbL2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 2"
            android:checked="false" />

        <RadioButton
            android:id="@+id/rbL3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 3" />

        <RadioButton
            android:id="@+id/rbL4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 4" />

        <RadioButton
            android:id="@+id/rbL5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 5" />

        <RadioButton
            android:id="@+id/rbL6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 6" />

        <RadioButton
            android:id="@+id/rbL7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 7" />

        <RadioButton
            android:id="@+id/rbL8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 8" />

        <RadioButton
            android:id="@+id/rbL9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 9" />

        <RadioButton
            android:id="@+id/rbL10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 10" />

    </RadioGroup>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:id="@+id/switchSound"
        android:checked="false"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvScore1"
        android:layout_above="@+id/radioGroup"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
